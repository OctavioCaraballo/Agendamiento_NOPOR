@page
@using AgendamientoIPS.App.Dominio
@model AgendamientoIPS.App.Frontend.Pages.Pacientes.CreateModel
@{
}
<h1>Nuevo Paciente</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="paciente.Nombre">Nombre</label>
        <input asp-for="paciente.Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="paciente.PrimerApellido">Primer Apellido</label>
        <input asp-for="paciente.PrimerApellido" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="paciente.SegundoApellido">Segundo Apellido</label>
        <input asp-for="paciente.SegundoApellido" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="paciente.Direccion">Dirección</label>
        <input asp-for="paciente.Direccion" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="paciente.Telefono">Teléfono</label>
        <input asp-for="paciente.Telefono" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="paciente.Correo">Correo Electrónico</label>
        <input asp-for="paciente.Correo" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="paciente.EPS">EPS</label>
        <select asp-for="paciente.EPS" asp-items="Html.GetEnumSelectList<EPS>()" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Crear Paciente</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>
