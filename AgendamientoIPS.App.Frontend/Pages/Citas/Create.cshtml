@page
@model AgendamientoIPS.App.Frontend.Pages.Citas.CreateModel
@{
}
<h1>Nueva Cita</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="cita.TipoCita">Tipo de Cita</label>
        <input asp-for="cita.TipoCita" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="cita.NumCita">Número de Cita</label>
        <input asp-for="cita.NumCita" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="cita.Especialidad"></label>
        <input asp-for="cita.Especialidad" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="cita.Hora"></label>
        <input asp-for="cita.Hora" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="cita.Fecha"></label>
        <input asp-for="cita.Fecha" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Crear Cita</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>