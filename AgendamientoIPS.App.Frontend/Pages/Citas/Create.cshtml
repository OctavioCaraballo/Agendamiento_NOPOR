@page
@using AgendamientoIPS.App.Dominio
@model AgendamientoIPS.App.Frontend.Pages.Citas.CreateModel
@{
}
<h1>Nueva Cita</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="cita.TipoCita">Tipo de Cita</label>
        <select asp-for="cita.TipoCita" asp-items="Html.GetEnumSelectList<TipoCita>()" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="cita.NumCita">Número de Cita</label>
        <input asp-for="cita.NumCita" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="cita.Especialidad">Especialidad</label>
        <input asp-for="cita.Especialidad" class="form-control">
        <span asp-validation-for = "cita.Especialidad" class = "text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="cita.Hora">Hora</label>
        <input type="time" asp-for="cita.Hora" class="form-control" min="09:00" max="18:00">
    </div>
    <div class="form-group">
        <label asp-for="cita.Fecha">Fecha</label>
        <input type="date" asp-for="cita.Fecha" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Crear Cita</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>
